  </tr>

<% @materias.each do |materia| %>
  <tr>
    <td><%=h materia.codigo %></td>
    <td><%=h materia.codigo_carrera %></td>
    <td><%=h materia.codigo_plan %></td>
    <td><%=h materia.nombre %></td>
    <td><%=h materia.anio %></td>
    <td><%= link_to 'Detalle', materia %></td>
    <% if current_user.tipo == 'a' %>
      <td><%= link_to 'Editar', edit_materia_path(materia) %></td>
      <td><%= link_to 'Eliminar', materia, :confirm => 'Are you sure?', :method => :delete %></td>
    <% end %>
  </tr>
<% end %>
</table>

