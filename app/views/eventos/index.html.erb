<h1>Listing eventos</h1>

<table>
  <tr>
    <th>Description</th>
    <th>Dtstart</th>
    <th>Dtend</th>
    <th>Recurrente?</th>
    <th>Freq</th>
    <th>Bydate</th>
    <th>Interval</th>
    <th>Espacio</th>
  </tr>

<% @eventos.each do |evento| %>
  <tr>
    <td><%=h evento.description %></td>
    <td><%=h evento.dtstart.to_s %></td>
    <td><%=h evento.dtend.to_s %></td>
    <td><%=h "SI" if evento.reccurrent%></td>
    <td><%=h evento.freq %></td>
    <td><%=h evento.byday %></td>
    <td><%=h evento.interval %></td>
    <td><%=h Espacio.find(:first, :conditions => {:id => evento.espacio_id}).codigo %></td>
    <td><%= link_to 'Show', evento %></td>
    <td><%= link_to 'Edit', edit_evento_path(evento) %></td>
    <td><%= link_to 'Destroy', evento, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New evento', new_evento_path %>
