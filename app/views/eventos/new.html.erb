<h1>New evento</h1>

<% form_for(@evento) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </p>
  <p>
    <%= f.label :dtstart %><br />
    <%= f.date_select :dtstart %>
  </p>
  <p>
    <%= f.label :dtend %><br />
    <%= f.date_select :dtend %>
  </p>
  <p>
    <%= f.label :freq %><br />
    <%= f.text_field :freq %>
  </p>
  <p>
    <%= f.label :byday %><br />
    <%= f.text_field :byday %>
  </p>
  <p>
    <%= f.label :interval %><br />
    <%= f.text_field :interval %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', eventos_path %>
