<% if @lista_materias.nil? %>
  <% @lista_materias = '' %>
<% end %>
<%= select_tag( "lista_materias", options_for_select(['']) + options_for_select(@lista_materias.collect {|p| [p.codigo.to_s + ' ' + p.nombre.strip.to_s]}),
              {:onchange => "javascript: document.getElementById('evento_description').value = document.getElementById('lista_materias').value;"}) %><br />
