<%= @events %>

<%= @calendar.export %>
<hr>
<% dias1 = [] %>
<% @calendar.events.each do |event| %>
  <p>
  DTSTART: <%= event.dtstart %><br>
  DTEND: <%= event.dtend %><br>
  DESC: <%= event.description %><br>
  RECCURR: <%= event.rrule %><br>
  Espacio: <%= Espacio.find(:first, :conditions => {:id => event.location}).codigo %></p>
  <% event.occurrences(:count => 10).each do |occurrence| %>
    <% dias1.push(occurrence.dtstart.day) if occurrence.dtstart.month == Time.now.month %>
  <% end %>
<% end %>


<%  weekly_calendar(@events, :date => Date.today, :include_24_hours => true) do |w|  %>
  <%  w.week do |event,truncate|  %>
    <%=  event.starts_at.strftime('%I:%M%p')  %>
    <%=  link_to truncate(event.name,truncate), :controller => <%=  link_to truncate(event.name,truncate), event_path(event)  %>  %>  
  <% end -%>
<% end -%>

